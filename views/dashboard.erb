<div id="top_right">
<% if session["access_token"] %>
<p><a href="/logout">logout.</a></p>
<% end %>
</div>

<div id="top_left">
<iframe src="https://embed.spotify.com/?uri=spotify:user:miiszade:playlist:3sSrHOVPy7BgcIIetPh95b" width="300" height="80" frameborder="0" allowtransparency="true"></iframe>
</div>


<div id="one">
  <ul>
    <% @simplified_events.shuffle.first(5).each do |event| %>
    <li>
      <p><%= event["event_name"] %></p>
      <p><%= event["web_description"] %></p>
      <p><%= event["venue_name"] %></p>
      <p><%= event["neighborhood"] %></p>
      <p><%= event["street_address"] %></p>
      <p><%= event["cross_street"] %></p>
      <p><%= event["price"] %></p>
    </li>
    <% end %>
  </ul>
</div>

<div id="two">
  <% @hourly_temperature["hourly_forecast"].first(6).each do |hour| %>
    <p>
      When it's <%= time = hour["FCTTIME"]["civil"] %> it will be <%= temp = hour["temp"]["english"] %> degrees farenheit.
    </p>
  <% end %>
</div>

<div id="three">
  <ul>
    <% @parsed_ny_yelp["businesses"].shuffle.first(5).each do |spot| %>
      <li>
        <p><%= spot["name"] %></p>
        <img src ="<%= spot["rating_img_url"] %>">
        <br/>
        <img src ="<%= spot["image_url"] %>">
        <p><%= spot["snippet_text"] %></p>
        <p><%= spot["display_phone"] %></p>
          <% spot["categories"].each do |category| %>
            <p><%= category[0] %></p>
      </li>
  </ul>
        <% end %>
          <% end %>
</div>

<div id="four">
  <ul>
  <% @simplified_reviews.shuffle.first(5).each do |movie| %>
  <li>
    <p>
  <%= movie["display_title"] %>
  <br/>
  <%= movie["headline"] %>
  <br/>
  <img src ="<%= movie["multimedia"]["resource"]["src"] %>">
  <br/>
  <%= movie["summary_short"] %>
  <br/>
  <%= movie["link"]["url"] %>
  </p>
</li>
<% end %>
</ul>
</div>

